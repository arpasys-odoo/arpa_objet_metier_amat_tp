<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Ajout du compteur de bateaux sur la fiche client -->
    <record id="view_partner_form_inherit_bateau" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.bateau</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Ajouter le bouton statistique avec le compteur -->
            <div name="button_box" position="inside">
                <button class="oe_stat_button" type="object" name="action_view_bateaux"
                        icon="fa-ship">
                    <field name="bateau_count" widget="statinfo" string="Bateaux"/>
                </button>
<!--                <button class="oe_stat_button" type="object" name="action_view_bateaux"-->
<!--                        icon="fa-ship" attrs="{'invisible': [('bateau_count', '=', 0)]}">-->
<!--                    <field name="bateau_count" widget="statinfo" string="Bateaux"/>-->
<!--                </button>-->
            </div>

            <!-- Ajouter champs alertes et mémos en haut du formulaire -->
            <xpath expr="//field[@name='vat']" position="before">
                <field name="alerte_info_client" placeholder="Actualité importante sur le client"
                       attrs="{'invisible': [('is_company','=',False),('parent_id','!=',False)]}"
                       class="text-danger"/>
                <field name="memo_info_client" placeholder="Informations diverses"
                       attrs="{'invisible': [('is_company','=',False),('parent_id','!=',False)]}"/>
            </xpath>

            <!-- Ajouter champs CA client annuel et solde financier -->
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="ca_client_annuel" attrs="{'invisible': [('is_company','=',False),('parent_id','!=',False)]}" widget="monetary"/>
<!--                À conserver pour le moment pour voir avec le client ce qu'il préfère (Onglet suivi des paiements ce champ custom). -->
<!-- <field name="solde_financier" attrs="{'invisible': [('is_company','=',False),('parent_id','!=',False)]}" widget="monetary"/> -->
            </xpath>

            <!-- Ajout du champ email de contact -->
            <xpath expr="//field[@name='website']" position="before">
                <field name="email_contact" widget="email" placeholder="Email de contact"/>
            </xpath>

            <!-- Ajouter onglet pour l'historique du CA -->
            <notebook position="inside">
                <page string="Historique CA" name="ca_history"
                      attrs="{'invisible': [('is_company','=',False),('parent_id','!=',False)]}">
                    <field name="ca_historique_ids" readonly="1">
                        <tree>
                            <field name="year"/>
                            <field name="amount" sum="Total"/>
                            <field name="currency_id" invisible="1"/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>

    <!-- Vue kanban pour les bateaux du client -->
    <record id="res_partner_kanban_view_inherited" model="ir.ui.view">
        <field name="name">res.partner.kanban.inherited</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.res_partner_kanban_view"/>
        <field name="arch" type="xml">
            <field name="email" position="after">
                <field name="bateau_count"/>
                <field name="alerte_info_client"/>
            </field>
            <xpath expr="//div[hasclass('oe_kanban_details')]" position="inside">
                <div t-if="record.bateau_count.raw_value > 0" class="mt-1">
                    <i class="fa fa-ship mr-1" role="img" aria-label="Bateaux" title="Bateaux"/>
                    <field name="bateau_count"/> bateaux
                </div>
                <div t-if="record.alerte_info_client.raw_value" class="mt-1 text-danger">
                    <i class="fa fa-exclamation-triangle" title="Alerte"/>
                    <span><field name="alerte_info_client"/></span>
                </div>
            </xpath>
        </field>
    </record>
</odoo>